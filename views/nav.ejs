              <li class="nav-item d-none d-lg-block">
                <!-- Desktop -->
                <button id="show-history-btn" class="btn btn-outline-dark ms-lg-3 mt-2 mt-lg-0">History</button>
              </li>
              <li class="nav-item d-block d-lg-none">
                <!-- Mobile (adds to offcanvas body) -->
                <button class="btn btn-outline-dark ms-lg-3 mt-2 mt-lg-0" onclick="showHistoryMobile()">History</button>
              </li>
            <% } %>
            <li class="nav-item">
                <button class="btn btn-outline-dark ms-lg-3 mt-2 mt-lg-0" onclick="toggleDarkMode()">Toggle Dark Mode</button>
